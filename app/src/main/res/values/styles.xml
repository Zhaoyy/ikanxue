<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.NoActionBar">

    <!-- Customize your theme here. -->
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>

  <style name="SplashTheme"
      parent="AppTheme">
    <item name="android:windowAnimationStyle">@style/SplashAnimStyle</item>
  </style>

  <style name="MainActivityTheme"
      parent="AppTheme">
    <item name="android:windowAnimationStyle">@style/SplashAnimStyle</item>
  </style>

  <style name="Theme_Light"
      parent="MainActivityTheme">
    <item name="main_bg_color">@color/white</item>
    <item name="second_main_bg_color">@color/text_black_5</item>
    <item name="text_color_1">@color/text_black_1</item>
    <item name="text_color_2">@color/text_black_2</item>
    <item name="text_color_3">@color/text_black_3</item>
    <item name="text_color_4">@color/text_black_4</item>
    <item name="text_color_5">@color/text_black_5</item>
    <item name="item_bg">@drawable/btn_bg_white</item>
  </style>

  <style name="Theme_Dark"
      parent="MainActivityTheme">
    <item name="main_bg_color">@color/title_header_color</item>
    <item name="second_main_bg_color">@color/title_header_color_dark</item>
    <item name="text_color_1">@color/text_black_1_dark</item>
    <item name="text_color_2">@color/text_black_2_dark</item>
    <item name="text_color_3">@color/text_black_3_dark</item>
    <item name="text_color_4">@color/text_black_4_dark</item>
    <item name="text_color_5">@color/text_black_5_dark</item>
    <item name="item_bg">@drawable/btn_bg_white_dark</item>
  </style>

  <style name="SplashAnimStyle">
    <item name="android:windowShowAnimation">@anim/abc_fade_in</item>
    <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
    <item name="android:windowHideAnimation">@anim/abc_fade_out</item>
    <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
  </style>

  <style name="select_all_on_focus">
    <item name="android:singleLine">true</item>
    <item name="android:focusable">true</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:focusableInTouchMode">true</item>
  </style>

  <!-- popwidnow 显示消失 动画-->
  <style name="mypopwindow_anim_style">
    <item name="android:windowEnterAnimation">@anim/popup_in</item>
    <!-- 指定显示的动画xml  -->
    <item name="android:windowExitAnimation">@anim/popup_out</item>
    <!-- 指定消失的动画xml  -->
  </style>

</resources>
