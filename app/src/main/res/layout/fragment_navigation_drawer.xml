<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg_color"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:orientation="vertical"
      android:background="@color/title_header_color"
      android:gravity="bottom"
      >
    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        >

      <com.mislead.circleimageview.lib.CircleImageView
          android:id="@+id/circleIcon"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:scaleType="centerCrop"
          android:src="@mipmap/ic_launcher"
          app:border_width="1dp"
          />


      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="用户名称"
          android:textColor="@color/white"
          android:textSize="20sp"
          />

    </LinearLayout>

  </LinearLayout>

  <RadioGroup
      android:id="@+id/rg"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RadioButton
        android:id="@+id/rbtn_new_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rbtn_bg"
        android:checked="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:button="@null"
        android:drawablePadding="28dp"
        android:text="@string/new_topic"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

    <RadioButton
        android:id="@+id/rbtn_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rbtn_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:button="@null"
        android:drawablePadding="28dp"
        android:text="@string/titles"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

    <RadioButton
        android:id="@+id/rbtn_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rbtn_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:button="@null"
        android:drawablePadding="28dp"
        android:text="@string/security_news"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_black_4"
        />

    <RadioButton
        android:id="@+id/rbtn_feed_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/drawer_btn_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:button="@null"
        android:drawablePadding="28dp"
        android:text="@string/feed_back"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

    <RadioButton
        android:id="@+id/rbtn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/drawer_btn_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:button="@null"
        android:drawablePadding="28dp"
        android:text="@string/about"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

  </RadioGroup>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/text_black_4"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1.0"
      />

  <LinearLayout
      android:id="@+id/ll_change_theme"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:paddingTop="8dp"
      android:paddingBottom="4dp"
      android:gravity="center_vertical"
      android:background="@drawable/drawer_btn_bg"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/iv_theme"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_light"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        />

    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dark_theme"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/ll_exit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:paddingTop="4dp"
      android:paddingBottom="8dp"
      android:gravity="center_vertical"
      android:background="@drawable/drawer_btn_bg"
      android:orientation="horizontal"
      >

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_exit"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textColor="?attr/text_color_2"
        android:textSize="20sp"
        />

  </LinearLayout>

</LinearLayout>