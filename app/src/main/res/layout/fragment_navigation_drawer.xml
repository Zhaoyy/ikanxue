<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffffff"
    tools:context=".NavigationDrawerFragment_"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

      <!--<View-->
      <!--android:layout_width="53dp"-->
      <!--android:layout_height="53dp"-->
      <!--android:layout_centerVertical="true"-->
      <!--android:layout_marginLeft="14.5dp"-->
      <!--android:background="@drawable/navigation_user_sharow" />-->

      <RelativeLayout
          android:id="@+id/circleLayout"
          android:layout_width="53dp"
          android:layout_height="53dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          >

        <ImageView
            android:id="@+id/circleIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_lancher"
            />

      </RelativeLayout>


      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/circleLayout"
          android:text="用户名称"
          android:textColor="@color/text_black_1"
          android:textSize="18sp"
          />

      <TextView
          android:id="@+id/sign"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/name"
          android:layout_marginTop="6dp"
          android:layout_toRightOf="@id/circleLayout"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="用户描述"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="@color/text_black_2"
          android:textSize="15sp"
          />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >


    </LinearLayout>

  </LinearLayout>
</ScrollView>