<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="?attr/actionBarSize"
      android:background="@color/main_bg_dark"
      app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="?attr/second_main_bg_color"
      >

    <TextView
        android:id="@+id/tv_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="?attr/text_color_2"
        android:textSize="@dimen/text_size_normal"
        android:text="@string/app_name"
        />

    <CheckBox
        android:id="@+id/ch_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/reply_with_reference"
        android:textColor="?attr/text_color_2"
        android:textSize="@dimen/text_size_normal"
        android:checked="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="?attr/text_color_4"
        />

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="24dp"
        android:singleLine="false"
        android:gravity="top|left"
        android:textColor="?attr/text_color_1"
        android:textSize="@dimen/text_size_big"
        android:hint="内容"
        android:textColorHint="?attr/text_color_3"
        />

  </LinearLayout>

</LinearLayout>